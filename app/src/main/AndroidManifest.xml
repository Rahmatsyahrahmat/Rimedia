<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rahmatsyah.rimedia">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.ui.profile.ProfileActivity"
            android:theme="@style/NoAnimation" />
        <activity android:name=".view.ui.like.LikeActivity"
            android:theme="@style/NoAnimation" />
        <activity android:name=".view.ui.post.PostActivity"
            android:theme="@style/NoAnimation" />
        <activity android:name=".view.ui.search.SearchActivity"
            android:theme="@style/NoAnimation" />
        <activity android:name=".view.ui.home.HomeActivity"
            android:theme="@style/NoAnimation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ui.register.RegisterActivity" />
        <activity
            android:name=".view.ui.login.LoginActivity">
        </activity>
    </application>

</manifest>